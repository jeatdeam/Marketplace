extends layout

block content
    main
        h1= name
        section.containerCards
            if baseDatos && baseDatos.length>1
                each el, indice in baseDatos
                    a.cardElement(class=`cardElement-${indice}`, id=`${indice}`, href=`/producto/${indice}`)
                            h1 #{indice}
            else
                p no hay datos